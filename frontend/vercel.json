{
	"version": 2,
	"builds": [
		{
			"src": "package.json",
			"use": "@vercel/static-build",
			"config": { "distDir": "dist" }
		}
	],
	"routes": [
		{ "src": "^/assets/(.*)", "dest": "/assets/$1" },
		{ "src": "^/(favicon.ico|manifest.json|logo.png)", "dest": "/$1" },
		{ "handle": "filesystem" },
		{
			"src": "^/(signin|signup|checkout-success|checkout-cancel|dashboard|trip-planner)/?.*",
			"dest": "/index.html"
		},
		{ "src": "^/details/.*", "dest": "/index.html" },
		{ "src": "^/(.*)$", "dest": "/index.html" }
	]
}
